{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": ".",
		"removeComments": true,
		"strict": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "."
	},
	"include": [
		"src/**/*",
    "__test__/**/*"
	]
}